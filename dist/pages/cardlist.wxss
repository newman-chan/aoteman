swiper {
  position: fixed;
  width: 100%;
  height: 880rpx;
}
swiper swiper-item {
  padding-left: 30rpx;
  padding-top: 114rpx;
}
swiper .slide-image {
  position: relative;
  float: left;
  display: block;
  margin-right: 15rpx;
  margin-bottom: 40rpx;
  width: 220rpx;
  height: 326rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
swiper .slide-image image {
  display: block;
  width: 100%;
  height: 100%;
}
.section {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.section video {
  display: block;
  width: 100%;
  height: 100%;
}
.section video .btn-play {
  display: block;
  text-align: center;
  color: #fff;
  text-shadow: 0 0 10rpx #000;
  font-size: 32rpx;
  opacity: 0;
}
.section video .btn-play.active {
  opacity: 1;
}
.section .video-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
}
.no-active {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  overflow: hidden;
}
.red-dot {
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  overflow: hidden;
  background: #ff0000;
}
.card-detail {
  position: fixed;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.card-detail .maskbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
}
.card-detail .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.card-detail .cont {
